# Autonotex Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# API Keys & Services
# ============================================

# Groq API Key (required for LLM features)
# Get it from: https://console.groq.com
# Key format: gsk_xxxxxxxx...
GROQ_API_KEY=gsk_your_groq_api_key_here

# ============================================
# Database Configuration
# ============================================

# MongoDB Connection String (required for note storage)
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
# Get it from: https://www.mongodb.com/cloud/atlas
MONGO_URI=mongodb+srv://user:password@cluster0.xxxxx.mongodb.net/autonotex_db

# ============================================
# Pinecone Configuration (Cloud Vector DB - Free Tier)
# ============================================

# Pinecone API Key
# Get it from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Index Name
PINECONE_INDEX=autonotex-notes

# Pinecone Cloud/Region (from your Pinecone project)
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Embedding model name
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# Server Configuration
# ============================================

# Flask/Server Port
PORT=5001

# Environment (development/production)
FLASK_ENV=development

# ============================================
# File Storage
# ============================================

# Upload folder path (relative to server directory)
UPLOAD_FOLDER=./uploads

# Max file upload size in MB
MAX_UPLOAD_SIZE=100

# ============================================
# LLM Configuration
# ============================================

# Groq Model to use
GROQ_MODEL=llama-3.3-70b-versatile

# Temperature for generation (0-1, higher = more creative)
LLM_TEMPERATURE=0.7

# Max tokens for generation
LLM_MAX_TOKENS=2048

# ============================================
# Feature Flags (optional)
# ============================================

# Enable Chroma vector DB (local or cloud)
ENABLE_VECTOR_DB=true

# Enable MongoDB storage
ENABLE_MONGODB=true

# Enable RAG for Q&A
ENABLE_RAG=true

# Number of questions to generate per document
QUESTIONS_COUNT=10

# Number of search results to return
SEARCH_RESULTS=5

